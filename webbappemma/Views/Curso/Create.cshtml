@model Curso

@{
    ViewData["Title"] = "Crear Curso";
}

<h1 class="d-flex justify-content-center">Crear Curso</h1>

<hr />
<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <dl class="row">
            <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreCurso" class="control-label"></label>
                <input asp-for="NombreCurso" class="form-control" />
                <span asp-validation-for="NombreCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario" class="control-label"></label>
                <input asp-for="Horario" class="form-control" />
                <span asp-validation-for="Horario" class="text-danger"></span>
                <br />
            </div>
                <div class="form-group">
                    <input type="submit" value="Agregar Curso" class="btn btn-primary" />

                    <a class="btn btn-success" asp-action="Index">Volver</a>
            </div>
        </form>
        </dl>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
