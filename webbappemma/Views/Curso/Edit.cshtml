@model Curso

@{
    ViewData["Title"] = "Actualizar Curso";
}

<h1 class="d-flex justify-content-center">Actualizar Curso</h1>

<hr />
<div class="d-flex justify-content-center">
    <div class="col-sm-8">
        <dl class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CursoID" />
            <div class="form-group">
                <label asp-for="NombreCurso" class="control-label"></label>
                <input asp-for="NombreCurso" class="form-control" />
                <span asp-validation-for="NombreCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario" class="control-label"></label>
                <input asp-for="Horario" class="form-control" />
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>
                <div>
                    <br />
                    <input type="submit" value="Actualizar Curso" class="btn btn-primary" />

                    <a class="btn btn-success" asp-action="Index">Volver</a>
                </div>
        </form>
        <</dl>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
