@model IEnumerable<Alumno>

@{
    ViewData["Title"] = "Ingresar Alumno";
}

<h1 class="d-flex justify-content-center">Gestionar Alumnos</h1>


<form asp-controller="Alumno" asp-action="SearchByRut" method="get">
    <div class="form-group">
        <label for="rut">Buscar por Rut:</label>
        <input type="text" class="form-control" name="rut" />
    </div>
    <br />
    <button type="submit" class="btn btn-success">Buscar Rut</button>
</form>


<p>
    <br />
    <br />
    <a class="btn btn-primary"  asp-action="Create">Ingresar Alumno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>

            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.AlumnoID">Editar</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.AlumnoID">Eliminar</a>
            </td>
        </tr>
}


    </tbody>
</table>




